{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ 활성 파일 빌드",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out",

        // 1. execute .out file
        "&&", //to join building and running of the file
        "${fileDirname}/${fileBasenameNoExtension}.out",

        //2. file input
				// "<", 
				// "${fileDirname}/input.txt",

        //3. file output
				// ">", 
				// "${fileDirname}/output.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
      // "detail": "컴파일러: /usr/bin/g++"
    }
  ]
}
